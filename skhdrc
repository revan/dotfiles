# in-space
ctrl - left : yabai -m window --focus west || yabai -m display --focus west
ctrl - right : yabai -m window --focus east || yabai -m display --focus east
ctrl - up : yabai -m window --focus north ||  yabai -m display --focus north
ctrl - down : yabai -m window --focus south ||  yabai -m display --focus south
# note command arrow maps to alt here after karabiner
ctrl + alt - left : yabai -m window --warp west || (yabai -m window --display west && yabai -m display --focus west)
ctrl + alt - right : yabai -m window --warp east || (yabai -m window --display east && yabai -m display --focus east)
ctrl + alt - up : yabai -m window --warp north || (yabai -m window --display north && yabai -m display --focus north)
ctrl + alt - down : yabai -m window --warp south || (yabai -m window --display south && yabai -m display --focus south)

# spaces
ctrl + cmd - 1: yabai -m window --space 1
ctrl + cmd - 2: yabai -m window --space 2
ctrl + cmd - 3: yabai -m window --space 3
ctrl + cmd - 4: yabai -m window --space 4
ctrl + cmd - 5: yabai -m window --space 5
ctrl + cmd - 6: yabai -m window --space 6
ctrl + cmd - 7: yabai -m window --space 7
ctrl + cmd - 8: yabai -m window --space 8
ctrl + cmd - 9: yabai -m window --space 9
ctrl + cmd - 0: yabai -m window --space 10
ctrl + cmd - 0x21: yabai -m window --space prev
ctrl + cmd - 0x1E: yabai -m window --space next

# monitors
ctrl - p  : yabai -m display --focus prev
ctrl - n  : yabai -m display --focus next || yabai -m display --focus prev
ctrl + cmd - p  : yabai -m window --display prev; yabai -m display --focus prev
ctrl + cmd - n  : yabai -m window --display next || yabai -m window --display prev; \
  yabai -m display --focus next || yabai -m display --focus prev

# focus
ctrl - f : yabai -m window --toggle zoom-fullscreen
ctrl + cmd - space : yabai -m window --toggle float; yabai -m window --grid 4:4:1:1:2:2
